{
    "name": "@kevits/conventional-commit",
    "version": "1.0.0",
    "description": "Checks and parses commit against the conventional commit standard",
    "keywords": [
        "conventional-commit",
        "conventional-commit-parser",
        "conventional-commit-validator"
    ],
    "license": "ISC",
    "author": {
        "name": "Kevin"
    },
    "main": "dist/index.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/kevits/release-toolkit.git"
    },
    "homepage": "https://github.com/kevits/release-toolkit/tree/main/packages/conventional-commit",
    "bugs": {
        "url": "https://github.com/kevits/release-toolkit/issues"
    },
    "scripts": {
        "build": "tsc",
        "test": "jest",
        "format": "cd ../../ && prettier --write ./packages/conventional-commit/",
        "format-check": "cd ../../ && prettier --check ./packages/conventional-commit/",
        "lint": "cd ../../ && eslint ./packages/conventional-commit/",
        "prepack": "npm run build"
    },
    "files": [
        "dist"
    ],
    "publishConfig": {
        "access": "public"
    }
}
